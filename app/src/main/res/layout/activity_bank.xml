<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hema.assist.feature.apply.view.bank.BankActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_default_background_color"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_10"
            android:text="请绑定本人银行卡" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/applyTextView"
                android:text="持卡人" />

            <EditText
                android:id="@+id/et_name"
                style="@style/applyEditText"
                android:gravity="right|center"
                android:hint="请输入持卡人"
                android:paddingRight="@dimen/dp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/applyTextView"
                android:layout_width="wrap_content"
                android:text="储蓄卡号" />

            <EditText
                android:id="@+id/et_bank_code"
                style="@style/applyEditText"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/bank_rz_photo_s2"
                android:gravity="right|center"
                android:hint="请输入银行卡号"
                android:paddingRight="@dimen/dp_10" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/applyTextView"
                android:layout_width="wrap_content"
                android:text="银行预留手机号" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/applyEditText"
                android:gravity="right|center"
                android:hint="请输入银行预留手机号"
                android:paddingRight="@dimen/dp_10" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_support_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="查看支持银行"
            android:textColor="@color/light1_blue" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="26dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorPrimary"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>

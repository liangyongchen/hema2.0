<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context="com.hema.assist.feature.home.view.HandPwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_s3" />

        </LinearLayout>


        <com.hema.assist.common.views.Lock9View
            android:id="@+id/lock_9_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:lock9_autoLink="false"
            app:lock9_enableVibrate="true"
            app:lock9_lineColor="@color/lineLockColor"
            app:lock9_lineWidth="8dp"
            app:lock9_nodeOnAnim="@anim/node_on_1"
            app:lock9_nodeOnSrc="@drawable/shoushi_clock_s2"
            app:lock9_nodeSrc="@drawable/shoushi_s2"
            app:lock9_padding="50dp"
            app:lock9_spacing="28dp"
            app:lock9_vibrateTime="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="使用密码登陆"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

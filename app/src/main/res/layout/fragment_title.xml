<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            style="@style/blackText.Large"
            android:layout_centerInParent="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题" />


        <ImageView
            android:id="@+id/nav_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_transparent"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="@dimen/content_margin"
            android:src="@mipmap/title_left_back" />

        <TextView
            android:id="@+id/nav_tv_right"
            style="@style/blackText.Normal"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_transparent"
            android:gravity="center"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="@dimen/content_margin"
            android:text="确定"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/nav_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_transparent"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="@dimen/content_margin"
            android:src="@mipmap/title_left_back"
            android:visibility="invisible" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_default_split_line_color"/>

</LinearLayout>

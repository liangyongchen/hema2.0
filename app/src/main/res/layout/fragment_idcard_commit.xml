<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--正面-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">


            <ImageView
                android:layout_width="137dp"
                android:layout_height="103dp"
                android:src="@drawable/scan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/scan_textK"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/scan_textV"
                    android:text="张三" />

                <TextView
                    style="@style/scan_textK"
                    android:layout_marginTop="5dp"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/tv_code"
                    style="@style/scan_textV"
                    android:text="xxxxxxxxxxxxxxxxxxxx" />>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sp_16"
            android:background="@color/app_default_background_color" />

        <!--反面-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">


            <ImageView
                android:layout_width="137dp"
                android:layout_height="103dp"
                android:src="@drawable/scan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/scan_textK"
                    android:text="有效期" />

                <TextView
                    android:id="@+id/tv_f_time"
                    style="@style/scan_textTime"
                    android:text="2018.02.02" />

                <TextView
                    android:id="@+id/tv_a_time"
                    style="@style/scan_textTime"
                    android:text="2018.02.02" />


            </LinearLayout>


        </LinearLayout>

        <!--<android.support.v7.widget.CardView-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>


    </LinearLayout>


</ScrollView>

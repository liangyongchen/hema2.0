<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hema.assist.feature.home.view.AuestionBackActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/app_default_background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/sp_14"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/sp_14">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/art_qs_s3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="问题、意见反馈"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:background="@drawable/shape_rect_r5_white0"
                android:gravity="top"
                android:hint="请详细描述您的问题或意见，有您的反馈我们才会做的更好"
                android:padding="10dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wordQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/data"
                android:layout_alignRight="@id/data"
                android:layout_margin="5dp"
                android:text="0/200"
                android:textColor="@color/black1" />

        </RelativeLayout>


        <!--<android.support.v7.widget.CardView-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:text="提交反馈"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="243dp"
    android:background="@color/colorPrimary"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/list_title_centerbg_s3"
        android:gravity="bottom">


        <LinearLayout style="@style/home_header_lineLayout">

            <TextView
                style="@style/home_header_textView0"
                android:layout_marginLeft="16dp"
                android:text="今日业绩" />

            <TextView
                android:id="@+id/tv_today_achievement"
                style="@style/home_header_textView1"
                android:layout_marginLeft="16dp"
                android:text="2980元" />

        </LinearLayout>

        <LinearLayout style="@style/home_header_lineLayout">

            <TextView
                style="@style/home_header_textView0"
                android:text="本月业绩" />

            <TextView
                android:id="@+id/tv_month_achievement"
                style="@style/home_header_textView1"
                android:text="2980元" />

        </LinearLayout>

        <LinearLayout style="@style/home_header_lineLayout">

            <TextView
                style="@style/home_header_textView0"
                android:layout_marginRight="16dp"
                android:text="本月佣金" />

            <TextView
                android:id="@+id/tv_month_commission"
                style="@style/home_header_textView1"
                android:layout_marginRight="16dp"
                android:text="2980元" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="11.5dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="90dp"
            android:layout_height="89dp"
            android:src="@drawable/logo_s3" />


        <TextView
            android:id="@+id/tv_own_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="张海德"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </LinearLayout>


</FrameLayout>

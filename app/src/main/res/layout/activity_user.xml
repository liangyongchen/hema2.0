<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hema.assist.feature.apply.view.user.UserActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_default_background_color"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_10"
            android:text="请完善个人信息" />

        <!-- 工作信息 -->
        <LinearLayout
            android:id="@+id/btn_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/list_title_job_s2"
                android:gravity="center"
                android:padding="13dp"
                android:text="  工作信息"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未完成"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/list_right_hs_s3" />

        </LinearLayout>


        <!-- 家庭信息 -->
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/list_title_job_s2"
                android:gravity="center"
                android:padding="13dp"
                android:text="  家庭信息"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未完成"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/list_right_hs_s3" />

        </LinearLayout>


        <!-- 联系信息 -->
        <LinearLayout
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/list_title_job_s2"
                android:gravity="center"
                android:padding="13dp"
                android:text="  联系信息"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未完成"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/list_right_hs_s3" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="26dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorPrimary"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
